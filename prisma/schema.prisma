generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or your database provider
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  googleId      String?  @unique
  email         String   @unique
  name          String?
  password      String?  // Nullable, since some users may not set passwords if they use OAuth
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("users") // Optional: if you want to map to an existing "users" table
}
